<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Заголовок корзины -->
    <TextView
        android:id="@+id/cartTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Корзина"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Сообщение о пустой корзине -->
    <TextView
        android:id="@+id/emptyCartMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="В вашей корзине пока пусто"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Описание для добавления товаров -->
    <TextView
        android:id="@+id/emptyCartDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавьте товары из каталога"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Кнопка перехода к каталогу -->
    <Button
        android:id="@+id/goToCatalogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Перейти к каталогу"
        android:backgroundTint="@color/primaryColor"
        android:textColor="@android:color/white" />
</LinearLayout>
